<link rel="stylesheet" href="css/admin/product.css" >
<script src="js/admin/product.js"></script>
<script src="js/upload.js"></script>

<div class="col-md-10 col-md-offset-1 table-responsive row">
<table class="table table-striped" offset="0">
	<thead>
	<tr>
		<th></th>
		<th type="name">NAMN<i class="fa fa-caret-down"></i></th>
		<th type="category">KATEGORI<i class="fa fa-caret-left"></i></th>
		<th type="info">INFO<i class="fa fa-caret-left"></i></th>
		<th type="price">PRIS<i class="fa fa-caret-left"></i></th>
		<th type="rea">REA<i class="fa fa-caret-left"></i></th>
		<th type="stock">LAGER<i class="fa fa-caret-left"></i></th>
		<th></th>
	</tr>
	</thead>
	<tbody></tbody>
</table>
</div>

<div class="row">
<div class="btn-group col-sm-10 col-md-offset-2 col-sm-offset-1">
	<button class="btn btn-primary btn-info first" onclick="first()">
		<i class="fa fa-caret-left"></i>FIRST
	</button>
	<button class="btn btn-primary btn-info prev" onclick="prev()">
		<i class="fa fa-angle-left"></i>PREV
	</button>
	<button class="btn btn-success col-sm-4" onclick="showPopup(0)">
		LÄGG TILL</button>
	<button class="btn btn-primary next" onclick="next()">
		NEXT<i class="fa fa-angle-right"></i>
	</button>
	<button class="btn btn-primary last" onclick="last()">
		LAST<i class="fa fa-caret-right"></i>
	</button>
</div>
</div>

<div id="popup-container">
<div id="popup">
	<div>
		<form>
		  <div class="form-group">
		    <label for="name">NAMN</label>
		    <input type="text" class="form-control" id="name" placeholder="Exempel namn">
		  </div>
		  <div class="form-group">
		    <label for="category">KATEGORI</label>
		    <select id="category" class="form-control"></select>
		  </div>
		  <div class="row" style="margin-bottom: 25px;">
		  	<div class="col-xs-3">
			    <label for="price">PRIS</label>
			    <input type="number" min="0" name="price" id="price" class="form-control" value="0">
			</div>
		  	<div class="col-xs-3">
			    <label for="rea">REA PRIS</label>
			    <input type="number" min="0" name="rea" id="rea" class="form-control" value="0">
			</div>
		  	<div class="col-xs-3">
			    <label for="stock">LAGER</label>
			    <input type="number" min="1" name="stock" id="stock" class="form-control" value="1">
			</div>
		  </div>
		  <div class="form-group">
		    <input type="file" id="file" class="inputfile" data-multiple-caption="{count} files selected" multiple accept='image/*'>
		    <label for="file"><i class="fa fa-upload" aria-hidden="true"></i><span>BILDER</span></label>
		    <p class="help-block">Lägg till några bilder för produkt.</p>
		  </div>
		  <div class="form group">
		  	<label for="info">INFORMATION</label>
		  	<textarea class="form-control" id="info" rows="5"></textarea>
		  </div>
		  <hr>
		  <button type="button" id="upload" class="btn btn-default">Lägg till</button> <span>Allt korrekt?</span>
		</form>
	</div>

	<div>
		<label for="info_edit">INFORMATION</label>
		<textarea id="info-edit" name="info_edit" class="form-control" rows=5></textarea>

		<button class="btn btn-success" onclick="hidePopup()">KLAR</button>
	</div>
</div>
</div>